<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="#ed1b25"
        >
        <View 
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
       <RelativeLayout 
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="4"
           >
            <LinearLayout 
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <ImageView
               android:layout_marginLeft="8.5dp"
          android:layout_width="93dp"
            android:layout_height="93dp"
            android:src="@drawable/yuan2"
           />
          
           </LinearLayout>
           <LinearLayout 
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <com.School.Test.ImageUtil.RoundImageView
               android:layout_marginTop="2dp"
               android:layout_marginLeft="10dp"
          android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/back"
           />
           <TextView 
               android:id="@+id/usernametv"
               android:layout_marginTop="10dp"
               android:textColor="#ffffff"
               android:layout_marginLeft="10dp"
               android:textSize="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="孙文斌呵呵哒"
               />
           </LinearLayout>
       </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/mynewstv"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
       <ImageView 
           android:layout_marginLeft="10dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           
           android:layout_height="wrap_content"
           android:src="@drawable/xinxi"
           android:layout_marginBottom="2dp"
           />
          <TextView 
          android:layout_marginLeft="10dp"
          android:textSize="16dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="我的消息"
          />
    </LinearLayout>
     <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
           <ImageView 
           android:layout_marginLeft="10dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/daijiaoyilogo"
           android:layout_marginBottom="2dp"
           />
<TextView 
    android:id="@+id/myfbbtn"
          android:layout_marginLeft="10dp"
          android:textSize="16dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="我的发布"
          />
</LinearLayout>

     
     
     
     <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
           <ImageView 
           android:layout_marginLeft="10dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/gouwuchelogo"
           android:layout_marginBottom="2dp"
           />
<TextView 
         android:id="@+id/gwcbtn"
         android:layout_marginLeft="10dp"
          android:textSize="16dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="我的购物车"
          />
</LinearLayout>
     
   
     <LinearLayout 
         android:id="@+id/setll"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
           <ImageView 
           android:layout_marginLeft="10dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/shezhilogo"
           android:layout_marginBottom="2dp"
           />
<TextView 
          android:layout_marginLeft="10dp"
          android:textSize="16dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="个人设置"
          />
</LinearLayout>
     
     
     

<TextView 
    android:id="@+id/abouttv"
          android:layout_marginLeft="30dp"
          android:textSize="16dp"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="关于我们"
          />
</LinearLayout>
