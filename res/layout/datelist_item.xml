<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        >
        <TextView 
            android:id="@+id/tmonth"
            android:layout_marginLeft="2dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="12/25"
            android:textColor="#a3a3a3"
            android:textSize="14dp"
            />
        <LinearLayout 
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            >
            <View 
                android:layout_height="57dp"
                android:layout_width="0.5dp"
                android:background="#d3d3d3"
                />
            <ImageView 
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/yuanquan"
                />
            <View 
                android:layout_height="57dp"
                android:layout_width="0.5dp"
                android:background="#d3d3d3"
                />
        </LinearLayout>
        <LinearLayout 
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/juxingkuang"
    >
            <LinearLayout 
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView 
                    android:id="@+id/tname"
                    android:textColor="#ed1b25"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孙文斌"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预订了您的宝贝。"
                />
            </LinearLayout>
             <LinearLayout 
                 android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
               
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请尽快与买主联系。"
                />
            </LinearLayout>
             <LinearLayout 
                 android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
               
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买主QQ："
                />
             <TextView 
                 android:id="@+id/tqq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1258183719"
                />
                          <TextView 
                              android:textColor="#d3d3d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点此跳转到QQ"
                />
            </LinearLayout>
        </LinearLayout>
        <TextView 
            android:id="@+id/thour"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00"
            android:textColor="#a3a3a3"
            android:textSize="14dp"
            />
    </LinearLayout>

   
</LinearLayout>
