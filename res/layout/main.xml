<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    >
    <LinearLayout 
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >
        <View 
            android:layout_height="wrap_content"
            android:layout_width="5dp"
            />
        <TextView 
            android:id="@+id/backbtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="返回"
            />
        <View 
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="1dp"
            />
        <TextView 
			android:id="@+id/registbtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="注册"
            />
         <View 
              android:layout_height="wrap_content"
            android:layout_width="5dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="校园购"
            android:textColor="#ffffff"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/loginbackground"
		android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent" 
        >
         <View 
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="0.6"
             />
        
        <LinearLayout 
            android:gravity="center_vertical"
            android:layout_height="55dp"
            android:layout_width="250dp"
            android:background="@drawable/registeditbakground"
            >
            <ImageView 
                android:layout_marginLeft="15dp"
                android:background="@drawable/number"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <EditText
                android:id="@+id/numberedt"
         android:layout_marginLeft="20dp"
         android:textColorHint="#afa6a5"
            style="?android:attr/textViewStyle"
            android:layout_width="180dp"
             android:layout_height="45dp"
            android:textSize="23dp"
            android:maxLines="9"
            android:background="@null"
            android:hint="请输入用户名"
            android:textColor="#cf4a3a"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />
        </LinearLayout>
     <View 
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="0.6"
             />
     <LinearLayout 
            android:gravity="center_vertical"
            android:layout_height="55dp"
            android:layout_width="250dp"
            android:background="@drawable/registeditbakground"
            >
            <ImageView 
                android:layout_marginLeft="15dp"
                android:background="@drawable/password"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <EditText
                android:id="@+id/passwordedt"
         android:layout_marginLeft="20dp"
         android:textColorHint="#afa6a5"
            style="?android:attr/textViewStyle"
            android:layout_width="180dp"
             android:layout_height="45dp"
            android:textSize="23dp"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLines="16"
            android:password="true"
            android:textColor="#cf4a3a"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />
        </LinearLayout>
        <View 
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        >
        <Button 
            android:id="@+id/login"
            android:textSize="23dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/loginbutton"
            />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <View 
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:background="#e6e6e6"
            />
        <TextView 
            android:id="@+id/forgotedt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="17dp"
            android:textColor="#ffffff"
            />
        <View 
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:background="#e6e6e6"
            />
    </LinearLayout>
   <View 
       android:layout_width="wrap_content"
       android:layout_height="15dp"
       />
</LinearLayout>
	