<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
   
    <LinearLayout 
        android:layout_height="40dp"
        android:layout_width="match_parent"
        >
        <TextView 
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/backbtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#D32626"
            android:textSize="17dp"
            android:text="返回"
            />
    </LinearLayout>
    <LinearLayout 
        android:gravity="center"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="23dp"
            android:textColor="#D32626"
            />
    </LinearLayout>
  
       <LinearLayout 
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <ImageView 
            android:layout_marginTop="11dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/number"
            />
         <EditText
             android:id="@+id/ruserNameedt"
            
             android:layout_marginTop="9dp"
             android:layout_marginLeft="16dp"
         android:textColorHint="#afa6a5"
            style="?android:attr/textViewStyle"
            android:layout_width="190dp"
             android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入用户名"
            android:maxLines="9"
            android:textColor="#cf4a3a" />
    </LinearLayout>
   <View 
        android:layout_marginLeft="20dp"
        android:background="#c3c3c3"
        android:layout_height="0.5dp"
        android:layout_width="200dp"
        />
   
     <LinearLayout 
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <ImageView 
            android:layout_marginTop="11dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/number"
            />
         <EditText
              android:id="@+id/rqq"
             android:layout_marginTop="9dp"
             android:layout_marginLeft="16dp"
         android:textColorHint="#afa6a5"
            style="?android:attr/textViewStyle"
            android:layout_width="190dp"
             android:layout_height="45dp"
             android:maxLines="5"
            android:background="@null"
            android:hint="请输入QQ"
            android:textColor="#cf4a3a" />
    </LinearLayout>
    <View 
        android:layout_marginLeft="20dp"
        android:background="#c3c3c3"
        android:layout_height="0.5dp"
        android:layout_width="200dp"
        />
   
   
        <LinearLayout 
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <ImageView 
            android:layout_marginTop="11dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/number"
            />
         <EditText
             android:layout_marginTop="9dp"
             android:layout_marginLeft="16dp"
                android:id="@+id/rpasswordedt"
         android:textColorHint="#afa6a5"
            style="?android:attr/textViewStyle"
            android:layout_width="190dp"
             android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLines="16"
            android:password="true"
            android:textColor="#cf4a3a" />
    </LinearLayout>
    <View 
        android:layout_marginLeft="20dp"
        android:background="#c3c3c3"
        android:layout_height="0.5dp"
        android:layout_width="200dp"
        />
   
   
    <LinearLayout 
         android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
        android:text="注册"
        android:textColor="#ffffff"
       android:id="@+id/registbtn"
        android:layout_width="170dp"
        android:background="@drawable/registbackground"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    
</LinearLayout>