<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#FF7F24"
        android:gravity="center"
        >
		<ImageView 
		    android:onClick="addclose"
		    android:layout_marginLeft="10dp"
		    android:layout_width="10dp"
		    android:layout_height="20dp"
		    android:src="@drawable/back3"
		    />
        
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="23dp"
            android:text="发布"
            
            />
        <ImageView 
		    android:layout_marginLeft="10dp"
		    android:layout_width="20dp"
		    android:layout_height="30dp"
		    />
    </LinearLayout>
<LinearLayout 
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:layout_height="40dp"
    android:layout_width="match_parent"
    >
        <LinearLayout 
            android:layout_marginLeft="10dp"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:layout_width="200dp"
    >
  <EditText

         android:id="@+id/titleedt"
         android:textSize="20dp"
         android:textColorHint="#B0B0B0"
            style="?android:attr/textViewStyle"
            android:layout_width="180dp"
            android:maxLines="9"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入标题"
            android:textColor="#cf4a3a"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />
  </LinearLayout>
</LinearLayout>
<View 
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="fill_parent"
    android:layout_height="1.6dp"
    android:background="#c3c3c3"
    />
<LinearLayout 
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#EDEDED"
    android:layout_marginTop="10dp"
    android:layout_height="190dp"
    android:layout_width="fill_parent"
    >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
    <EditText
        android:id="@+id/contentedt"
         android:textSize="20dp"
         android:textColorHint="#ffffff"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:maxLines="9"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入描述"
            android:textColor="#cf4a3a"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:scaleType="fitXY"
            android:id="@+id/image1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="#B0B0B0"
            />
        <ImageView 
            android:scaleType="fitXY"
             android:id="@+id/image2"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="#B0B0B0"
            />
        <ImageView 
            android:scaleType="fitXY"
             android:id="@+id/image3"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="#B0B0B0"
            />
    </LinearLayout>
</LinearLayout>
<LinearLayout 
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#EDEDED"
    android:layout_marginTop="10dp"
    android:layout_height="180dp"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/yuanjiaokuang"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >
        <LinearLayout 
            android:id="@+id/yikou"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:background="@drawable/huangseanniu"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一口价"
                />
            </LinearLayout>
        <LinearLayout 
            android:background="@drawable/huangseanniu"
            android:id="@+id/keyi"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:layout_width="0dp"
            
            >
            <TextView 
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可议价"
                />
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/mianyi"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:background="@drawable/huangseanniu"
            >
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面议"
                />
            </LinearLayout>
    </LinearLayout>
    
    
    
    <LinearLayout 
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:gravity="center"
                android:id="@+id/moneyedt"
         android:layout_marginLeft="10dp"
         android:textSize="20dp"
         android:textColorHint="#B0B0B0"
            style="?android:attr/textViewStyle"
            android:layout_width="180dp"
            android:maxLines="9"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入价格"
            android:inputType="number"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />
        <View 
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:background="#B0B0B0"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/checkfl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        
        >
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
           
            />
        <TextView 
            android:id="@+id/xuanzefl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未选择"
            android:textSize="20dp"
            android:textColor="#9C9C9C"
            android:layout_marginLeft="10dp"
            />
        <ImageView 
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/tubiao"
            />
    </LinearLayout>
    
    
    
    
    </LinearLayout>
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >
    <Button 
        android:id="@+id/fbbtn"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="发布"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="#ff0000"
    android:textSize="23dp"
    android:textColor="#ffffff"
    />
</LinearLayout>





</LinearLayout>
